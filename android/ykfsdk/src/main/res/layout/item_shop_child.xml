<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_child_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_child_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_child_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_child_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/all_black"
        android:textSize="15sp"
        tools:text="¥49,000" />

    <TextView
        android:id="@+id/tv_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_child_img"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toStartOf="@id/tv_child_price"
        android:layout_toLeftOf="@id/tv_child_price"
        android:layout_toEndOf="@id/iv_child_img"
        android:layout_toRightOf="@id/iv_child_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/all_black"
        android:textSize="15sp"
        tools:text="极品家装afdsfadfadfafadfaafdadfaadfa北欧…" />


    <TextView
        android:id="@+id/tv_child_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_child_title"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/tv_child_num"
        android:layout_toLeftOf="@id/tv_child_num"
        android:layout_toEndOf="@id/iv_child_img"
        android:layout_toRightOf="@id/iv_child_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        tools:text="加一行字段加afdfadfadfadfadfadfadfa一行…" />

    <TextView
        android:id="@+id/tv_child_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_child_price"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        tools:text="x1" />

    <TextView
        android:id="@+id/tv_child_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iv_child_img"
        android:layout_alignBottom="@id/iv_child_img"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@id/tv_child_state"
        android:layout_toLeftOf="@id/tv_child_state"
        android:layout_toEndOf="@id/iv_child_img"
        android:layout_toRightOf="@id/iv_child_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        tools:text="这里是副fadfadfadfadfadfadfadfadsfa标题，字…" />

    <TextView
        android:id="@+id/tv_child_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_child_second"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_FF6B6B"
        android:textSize="14sp"
        tools:text="已签收" />

</RelativeLayout>